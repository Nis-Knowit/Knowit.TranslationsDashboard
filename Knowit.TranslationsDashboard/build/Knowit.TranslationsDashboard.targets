<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <KnowitTranslationsDashboardContentFilesPath>$(MSBuildThisFileDirectory)..\content\App_Plugins\KnowitTranslationsDashboard\**\*.*</KnowitTranslationsDashboardContentFilesPath>
  </PropertyGroup>

  <Target Name="CopyKnowitTranslationsDashboardAssets" BeforeTargets="Build">
    <ItemGroup>
      <KnowitTranslationsDashboardContentFiles Include="$(KnowitTranslationsDashboardContentFilesPath)" />
    </ItemGroup>
    <Message Text="Copying Knowit Translations Dashboard files: $(KnowitTranslationsDashboardContentFilesPath) - #@(KnowitTranslationsDashboardContentFiles->Count()) files" Importance="high" />
    <Copy SourceFiles="@(KnowitTranslationsDashboardContentFiles)" DestinationFiles="@(KnowitTranslationsDashboardContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\KnowitTranslationsDashboard\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
  </Target>

  <Target Name="ClearKnowitTranslationsDashboardAssets" BeforeTargets="Clean">
    <ItemGroup>
      <KnowitTranslationsDashboardDir Include="$(MSBuildProjectDirectory)\App_Plugins\KnowitTranslationsDashboard\" />
    </ItemGroup>
    <Message Text="Clear old Knowit Translations Dashboard assets from: @(KnowitTranslationsDashboardDir)" Importance="high" />
    <RemoveDir Directories="@(KnowitTranslationsDashboardDir)" />
  </Target>
</Project>